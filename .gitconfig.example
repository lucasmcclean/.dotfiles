[user]
    name = <Your Name>
    email = <Your Email>
    signingkey = </path/to/.ssh/key.pub>

[core]
    editor = nvim
    autocrlf = input
    excludesfile = ~/git/.gitignore

[push]
    default = simple

[pull]
    rebase = true

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[color]
    ui = auto

[credential]
    helper = cache

[commit]
    gpgSign = true

[gpg]
    format = ssh

[gpg "ssh"]
    allowedSignersFile = ~/.config/git/allowed-signers

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
